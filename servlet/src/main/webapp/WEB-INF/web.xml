<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>MusicBrainz Search Server</display-name>
    <servlet>
    <servlet-name>SearchServerServlet</servlet-name>
    <servlet-class>org.musicbrainz.search.SearchServerServlet</servlet-class>
        <init-param>
            <param-name>index_dir</param-name>
            <param-value>/home/lukas/projects/mbsearch/searchserver/index/data</param-value>
        </init-param>
        </servlet>
  <servlet-mapping>
    <servlet-name>SearchServerServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
