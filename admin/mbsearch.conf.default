FastCgiServer /home/lucene/lucene_server/bin/handler.fcgi -socket /tmp/mbsearch.fcgi.sock
SetEnv INDEXDIR "/var/index"

NameVirtualHost *
<VirtualHost *>
	ServerAdmin root@dexter.int
	
	DocumentRoot /home/lucene/lucene_server/htdocs
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>

	ErrorLog /var/log/apache2/search_error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel debug
	CustomLog /var/log/apache2/search_access.log combined

        RewriteEngine On
	#RewriteLog "/tmp/rewrite.log" 
	#RewriteLogLevel 9
        RewriteRule ^/ws/1/([^/]+)         /cgi-bin/handler.fcgi?type=$1 [PT,QSA]
        

        ScriptAlias /cgi-bin/ /home/lucene/lucene_server/bin/
        <Directory "/home/lucene/lucene_server/bin">
                AllowOverride None
                Options ExecCGI -MultiViews +SymLinksIfOwnerMatch
                Order allow,deny
                Allow from all
                SetHandler  fastcgi-script
        </Directory>
</VirtualHost>
